<Window x:Class="PM1.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM1"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Username:"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Margin="10" Width="200"/>

        <Label Grid.Row="2" Content="Password:"/>
        <PasswordBox x:Name="PasswordTextBox" Grid.Row="3" Margin="10" Width="200"/>

        <Label Grid.Row="4" Content="Email:"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="5" Margin="10" Width="200"/>

        <Button x:Name="SignupButton" Grid.Row="6" Margin="10" Width="100" Content="Sign Up" Click="SignupButton_Click"/>
        <Button x:Name="CancelButton" Grid.Row="6" Margin="350,46,350,-26" Width="100" Content="Cancel" Click="CancelButton_Click"/>
    </Grid>
</Window>
