<Window x:Class="PM1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Username:"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Margin="10" Width="200"/>

        <Label Grid.Row="2" Content="Password:"/>
        <PasswordBox x:Name="PasswordTextBox" Grid.Row="3" Margin="10" Width="200"/>

        <Button x:Name="LoginButton" Grid.Row="3" Margin="350,53,332,-33" Content="Login" Click="LoginButton_Click"/>
        <Button x:Name="SignUpButton" Grid.Row="3" Margin="350,89,332,-69" Content="Sign UP" Click="SignUpButton_Click"/>

    </Grid>
</Window>
