<Window x:Class="PM1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM1"
        mc:Ignorable="d"
        Title="DashboardWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Product List" FontSize="16" FontWeight="Bold" Margin="10"/>
        <ListBox x:Name="ProductListBox" Grid.Row="1" Margin="10" Width="300"/>

        <StackPanel Grid.Row="1" Margin="20,10,10,10" HorizontalAlignment="Right">
            <Button Content="Add" Width="75" Click="AddButton_Click"/>
            <Button Content="Edit" Width="75" Click="EditButton_Click"/>
            <Button Content="Delete" Width="75" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
